{
  "watch": [
    "backend/**/*.js",
    "!backend/node_modules/**",
    "!backend/coverage/**"
  ],
  "ignore": [
    "**/*.test.js",
    "**/*.spec.js",
    "**/__tests__/**"
  ],
  "ext": "js,json",
  "execMap": {
    "js": "node --experimental-modules --es-module-specifier-resolution=node"
  },
  "env": {
    "NODE_ENV": "development"
  }
}
